<Defs>
    <RecipeDef ParentName="SurgeryFlesh">
        <defName>InstallRoboticEye</defName>
        <label>install robotic visual orb</label>
        <description>Install a robotic visual orb.</description>
        <workerClass>Recipe_InstallArtificialBodyPart</workerClass>
        <jobString>Installing robotic visual orb.</jobString>
        <workAmount>2000</workAmount>
        <surgerySuccessChanceFactor>1</surgerySuccessChanceFactor>
        <skillRequirements>
        <Medicine>4</Medicine>
        </skillRequirements>
        <ingredients>
        <li>
            <filter>
            <categories>
                <li>Medicine</li>
            </categories>
            </filter>
            <count>2</count>
        </li>
        <li>
            <filter>
            <thingDefs>
                <li>RoboticEye</li>
            </thingDefs>
            </filter>
            <count>1</count>
        </li>
        </ingredients>
        <fixedIngredientFilter>
        <categories>
            <li>Medicine</li>
        </categories>
        <thingDefs>
            <li>RoboticEye</li>
        </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
        <li>Eye</li>
        </appliedOnFixedBodyParts>
        <addsHediff>RoboticEye</addsHediff>
    </RecipeDef>

