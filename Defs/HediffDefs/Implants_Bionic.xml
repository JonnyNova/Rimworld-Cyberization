<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <HediffDef Name="BionicImplantBase" ParentName="PoweredImplantBase" Abstract="True">
        <comps>
            <li Class="FrontierDevelopments.Cyberization.Power.PartPowerConsumerProperties">
                <powerPerTick>2</powerPerTick>
            </li>
        </comps>
    </HediffDef>

    <HediffDef ParentName="BionicImplantBase">
        <defName>Painshunt</defName>
        <label>painshunt</label>
        <labelNoun>a painshunt</labelNoun>
        <description>An installed painshunt.</description>
        <descriptionHyperlinks><ThingDef>Painshunt</ThingDef></descriptionHyperlinks>
        <stages>
            <li>
                <painFactor>0.5</painFactor>
            </li>
        </stages>
        <spawnThingOnRemoved>Painshunt</spawnThingOnRemoved>
    </HediffDef>

    <HediffDef ParentName="BionicImplantBase">
        <defName>Sleepshunt</defName>
        <label>sleepshunt</label>
        <labelNoun>a sleepshunt</labelNoun>
        <description>An installed sleephunt.</description>
        <descriptionHyperlinks><ThingDef>Sleepshunt</ThingDef></descriptionHyperlinks>
        <stages>
            <li>
                <restFallFactor>0.5</restFallFactor>
            </li>
        </stages>
        <spawnThingOnRemoved>Sleepshunt</spawnThingOnRemoved>
    </HediffDef>

    <HediffDef ParentName="BionicImplantBase">
        <defName>Megashunt</defName>
        <label>megashunt</label>
        <labelNoun>a megashunt</labelNoun>
        <description>An installed megashunt.</description>
        <descriptionHyperlinks><ThingDef>Megashunt</ThingDef></descriptionHyperlinks>
        <stages>
            <li>
                <restFallFactor>0.5</restFallFactor>
                <painFactor>0.5</painFactor>
            </li>
        </stages>
        <spawnThingOnRemoved>Megashunt</spawnThingOnRemoved>
    </HediffDef>
</Defs>