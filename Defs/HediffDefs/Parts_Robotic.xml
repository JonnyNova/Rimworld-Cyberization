<Defs>
    <HediffDef Name="RoboticBodyPartBase" ParentName="AddedBodyPartBase" Abstract="True">
        <comps>
            <li Class="FrontierDevelopments.Cyberization.AddedPartSolarFlareVulnerabilityProperties">
                <partEffectiveness>0.0</partEffectiveness>
            </li>
            <li Class="FrontierDevelopments.Cyberization.AddedPartBreakdownableProperties">
                <partEffectiveness>0.0</partEffectiveness>
            </li>
            <li Class="FrontierDevelopments.Cyberization.AddedPartMaintenanceProperties">
